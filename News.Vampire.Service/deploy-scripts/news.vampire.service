[Unit]
Description=News Vampire Service

[Service]
WorkingDirectory=/var/www/
ExecStart=/usr/bin/dotnet /var/www/News.Vampire.Service.exe
Restart=always
# Restart service after 10 seconds when dotnet service crashes
RestartSec=10
KillSignal=SIGINT
SysLogIdentifier=newsvampire
Environment=ASPNETCORE_ENVIRONMENT=Production
Environment=DOTNET_PRINT_TELEMETRY_MESSAGE=false
Environment=ASPNETCORE_URLS=http://:*5253

[Install]
WantedBy=multi-user.target